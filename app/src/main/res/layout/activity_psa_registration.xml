<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PanCard.PsaRegistrationActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Pan (UTI) id Registration"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:src="@drawable/move_to_bank" />

        <EditText
            android:id="@+id/et_vleid"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_20dp"
            android:background="@drawable/bordered_back"
            android:hint="Id"
            android:inputType="number"
            android:gravity="center_horizontal|center_vertical"
            android:enabled="false"
            android:textColor="@color/material_deep_teal_500"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_ownerName_pan"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_20dp"
            android:enabled="false"
            android:background="@drawable/bordered_back"
            android:hint="Owner Name"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />
        <EditText
            android:enabled="false"
            android:id="@+id/et_vleName_pan"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_20dp"
            android:background="@drawable/bordered_back"
            android:hint="VLE Name / Owner Name"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />
        <EditText
            android:id="@+id/et_state_pan"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_20dp"
            android:background="@drawable/bordered_back"
            android:hint="State"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <EditText
            android:enabled="false"
            android:id="@+id/et_city_pan"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_20dp"
            android:background="@drawable/bordered_back"
            android:hint="City"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>


        <EditText
            android:enabled="false"
            android:id="@+id/et_address_pan"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_20dp"
            android:background="@drawable/bordered_back"
            android:hint="Address"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_picode_pan"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_20dp"
            android:enabled="false"
            android:background="@drawable/bordered_back"
            android:hint="Pincode"
            android:maxLength="6"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_mobile_pan"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_20dp"
            android:enabled="false"
            android:background="@drawable/bordered_back"
            android:hint="Mobile Number"
            android:paddingStart="10dp"
            android:inputType="number"
            android:maxLength="10"
            android:paddingEnd="10dp" />
        <EditText
            android:id="@+id/et_email_pan"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_20dp"
            android:background="@drawable/bordered_back"
            android:hint="Email"
            android:enabled="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:enabled="false"
            android:id="@+id/et_panno_pan"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_20dp"
            android:background="@drawable/bordered_back"
            android:hint="Pan Card Number"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/sub_test"
            android:layout_height="wrap_content">
<TextView
    android:padding="7dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:textColor="@color/black"
    android:text="I want to open a authorized PAN agency and i will follow all the guideline by Govt of India. "
    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/check_cond_pan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:padding="5dp"
                android:background="@color/sub_test"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:text="I Confirm that i will follow all the rules of Govt of India."
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_proceed"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:onClick="ProceedToPsaReg"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/button_back"
            android:paddingStart="40dp"
            android:layout_marginBottom="10dp"
            android:paddingEnd="40dp"
            android:text="Proceed"
            android:textColor="@color/white"
            tools:ignore="OnClick" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>