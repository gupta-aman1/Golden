<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/fifteen"
    android:layout_marginTop="@dimen/fifteen"
    android:layout_marginRight="@dimen/fifteen"
    android:layout_marginLeft="@dimen/fifteen"
    android:background="@drawable/white_round"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/closebeni"
        android:layout_width="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/tendp"
        android:layout_marginRight="@dimen/twentydp"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Beneficiery Details"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/holderNameEt"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:maxLength="30"
        android:textSize="@dimen/fourteensp"
        android:inputType="textPersonName"
        android:hint="Enter Account Holder Name"
        android:layout_marginTop="@dimen/tendp"
        android:layout_marginRight="@dimen/thirtyfive"
        android:layout_marginLeft="@dimen/thirtyfive"
        android:background="@drawable/bordered_back"
        android:layout_height="@dimen/_45dp"/>
    <EditText
        android:id="@+id/mobileNumberETbeni"
        android:layout_width="match_parent"
        android:hint="Enter Mobile Number"
        android:textAlignment="center"
        android:maxLength="10"
        android:textSize="@dimen/fourteensp"
        android:inputType="number"
        android:layout_marginTop="@dimen/fivedp"
        android:layout_marginRight="@dimen/thirtyfive"
        android:layout_marginLeft="@dimen/thirtyfive"
        android:background="@drawable/bordered_back"
        android:layout_height="@dimen/_45dp"/>

    <EditText
        android:id="@+id/accountNo_ET"
        android:layout_width="match_parent"
        android:hint="Enter Account Number"
        android:inputType="number"
        android:maxLength="16"
        android:textSize="@dimen/fourteensp"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/fivedp"
        android:layout_marginRight="@dimen/thirtyfive"
        android:layout_marginLeft="@dimen/thirtyfive"
        android:background="@drawable/bordered_back"
        android:layout_height="@dimen/_45dp"/>
    <EditText
        android:id="@+id/ifscET"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:maxLength="11"
        android:textSize="@dimen/fourteensp"
        android:inputType="textCapCharacters"
        android:hint="Enter IFSC Code"

        android:layout_marginTop="@dimen/fivedp"
        android:layout_marginRight="@dimen/thirtyfive"
        android:layout_marginLeft="@dimen/thirtyfive"
        android:background="@drawable/bordered_back"
        android:layout_height="@dimen/_45dp"/>

    <TextView
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:id="@+id/verify_acc"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_marginRight="35dp"
        android:text="Verify Account Details"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/addBene"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        android:text="Add Beneficiery"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/twentydp"
        android:layout_marginTop="@dimen/twentydp"
        android:background="@drawable/blue_back"
        android:layout_height="40dp"/>

</LinearLayout>