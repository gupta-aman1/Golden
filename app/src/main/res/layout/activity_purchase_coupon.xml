<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Pan Purchase"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:src="@drawable/move_to_bank" />

        <EditText
            android:id="@+id/et_vleid"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_20dp"
            android:background="@drawable/bordered_back"
            android:hint="Id"
            android:inputType="number"
            android:maxLength="5"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <Spinner
            android:id="@+id/et_wallet"
            style="@style/SpinnerTheme1"
           android:layout_margin="@dimen/_20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    <TextView
        android:layout_marginTop="7dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:id="@+id/show_surcharge"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/txt_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/et_qty"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_20dp"
            android:background="@drawable/bordered_back"
            android:hint="Coupon Quantity"
            android:inputType="number"
            android:maxLength="3"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />
    <TextView
        android:layout_marginTop="7dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:id="@+id/show_final"
        android:textSize="14sp"
        android:textColor="@color/txt_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_proceed"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:onClick="ProceedCouponPuchase"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/button_back"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="Proceed"
            android:textColor="@color/white" />
    </LinearLayout>
